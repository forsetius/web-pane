{
  "name": "web-pane",
  "version": "0.7.0",
  "description": "Pane utility windows for Plank",
  "author": {
    "name": "Marcin Forseti PaÅºdziora",
    "email": "marcin.pazdziora@forseti.pl",
    "url": "https://forseti.pl"
  },
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=24.5.0"
  },
  "private": true,
  "scripts": {
    "start": "electron .",
    "clean": "rimraf dist release",
    "clean:full": "npm find-dupes && npm dedupe && npm prune && npm run clean",
      "compile:preload": "tsc -p tsconfig.preload.json",
      "compile:app": "tsc -p tsconfig.json",
      "compile:post": "node dist/postCompile.js",
    "compile": "npm run compile:preload && npm run compile:app && npm run compile:post",

    "icons": "build/bin/make-icons.sh",
    "dist:release": "electron-builder --publish=always",
    "dist:ci": "electron-builder --publish=never",
    "dist:ci:win": "docker run --rm -it -e CI=false -v \"$PWD\":/project -w /project -v \"$HOME/.cache/electron\":/root/.cache/electron -v \"$HOME/.cache/electron-builder\":/root/.cache/electron-builder electronuserland/builder:wine bash -lc 'npm run compile && npx electron-builder -w nsis -w portable --x64 --publish=never'",
    "dist:ci:mac": "electron-builder -m --publish=never",
    "dist:ci:linux": "electron-builder -l --publish=never"
  },
  "dependencies": {
    "bootstrap": "^5.3.8",
    "deepmerge-ts": "^7.1.5",
    "yargs": "^18.0.0",
    "zod": "^4.1.5",
    "zod-validation-error": "^4.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@tsconfig/node24": "^24.0.1",
    "@tsconfig/strictest": "^2.0.5",
    "@types/node": "^24.3.1",
    "@types/yargs": "^17.0.33",
    "electron": "^38.0.0",
    "electron-builder": "^26.0.20",
    "electron-updater": "^6.6.8",
    "eslint": "^9.35.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.42.0"
  }
}
